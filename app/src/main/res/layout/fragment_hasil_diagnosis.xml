<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".view.diagnosis.HasilDiagnosisFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/plusjakartasansextrabold"
                android:text="Hasil Diagnosis"
                android:textAlignment="center"
                android:textColor="@color/royal_blue"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/hasil_diagnosis" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hasil : "
                    android:textColor="@color/royal_blue"
                    android:textSize="16sp"
                    android:fontFamily="@font/plusjakartasansregular"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Depresi Sedang"
                    android:textColor="@color/royal_blue"
                    android:textSize="16sp"
                    android:fontFamily="@font/plusjakartasansregular"

                    />


            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plusjakartasanslight"
                android:text="kurang percaya diri dan/atau harga diri, mengakibatkan kurangnya motivasi untuk melakukan sesuatu. Sering kali seseorang mengkhawatirkan hal-hal sensitif yang tidak perlu dan cenderung merasa sakit hati atau tersinggung dalam hubungan pribadi"
                android:textAlignment="inherit"
                android:textColor="@color/black"
                android:textSize="16sp"

                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/royal_blue"
                android:padding="14dp"
                android:text="Kembali"
                app:cornerRadius="20dp"

                />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
